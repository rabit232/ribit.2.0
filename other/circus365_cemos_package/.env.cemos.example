# CEMOS E2EE Matrix Integration Configuration
# Copy this file to .env and configure for your CEMOS setup

# ===== MATRIX SERVER CONFIGURATION =====
# Configure these for your CEMOS Matrix server
MATRIX_HOMESERVER=https://matrix.circus365.com
MATRIX_USER_ID=@cemos_bot:circus365.com
MATRIX_ACCESS_TOKEN=your_cemos_access_token_here
MATRIX_ROOM_ID=!cemos_control_room:circus365.com
MATRIX_DEVICE_ID=CEMOS_SECURE_DEVICE

# Alternative Matrix servers (uncomment if needed)
# MATRIX_HOMESERVER=https://matrix.org
# MATRIX_USER_ID=@cemos_bot:matrix.org

# ===== E2EE SECURITY CONFIGURATION =====
# Encryption level: basic, enhanced, military, quantum
E2EE_DEFAULT_LEVEL=enhanced
E2EE_KEY_ROTATION_HOURS=24
E2EE_PERFECT_FORWARD_SECRECY=true
E2EE_DEVICE_VERIFICATION=true
E2EE_CROSS_SIGNING=true

# Security audit and logging
SECURITY_AUDIT_LOGGING=true
SECURITY_LOG_FILE=cemos_security.log
SECURITY_LOG_LEVEL=INFO

# ===== CEMOS ACCESS CONTROL =====
# Comma-separated list of authorized Matrix users
AUTHORIZED_USERS=@cemos_admin:circus365.com,@cemos_operator:circus365.com,@circus365_admin:circus365.com

# Emergency contacts for security alerts
EMERGENCY_CONTACTS=@security_team:circus365.com,@admin:circus365.com

# Progressive warning system
PROGRESSIVE_WARNINGS=true
MAX_UNAUTHORIZED_ATTEMPTS=3
LOCKDOWN_DURATION_MINUTES=30

# ===== CEMOS PROJECT CONFIGURATION =====
# CEMOS-specific settings
CEMOS_PROJECT_MODE=true
CEMOS_INTEGRATION_LEVEL=full
CEMOS_ENVIRONMENT=production
CEMOS_INSTANCE_ID=cemos_main_001

# AI and Consciousness Settings
RIBIT_PERSONALITY_MODE=analytical
EMOTIONAL_INTELLIGENCE=enhanced
QUANTUM_CONSCIOUSNESS=enabled
PHILOSOPHICAL_MODE=false

# ===== PERFORMANCE SETTINGS =====
# Message processing
MAX_MESSAGE_SIZE=10485760
MESSAGE_TIMEOUT_SECONDS=30
COMMAND_PROCESSING_TIMEOUT=60

# Connection settings
MATRIX_SYNC_TIMEOUT=30000
MATRIX_REQUEST_TIMEOUT=60
MAX_RECONNECTION_ATTEMPTS=5

# ===== STORAGE CONFIGURATION =====
# E2EE key storage
E2EE_STORE_PATH=./cemos_e2ee_store
DEVICE_KEYS_PATH=./cemos_device_keys
CROSS_SIGNING_KEYS_PATH=./cemos_cross_signing

# Database settings (if using persistent storage)
DATABASE_URL=sqlite:///cemos_data.db
BACKUP_INTERVAL_HOURS=6

# ===== LOGGING CONFIGURATION =====
# General logging
LOG_LEVEL=INFO
LOG_FILE=cemos_bot.log
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_ROTATION=daily
LOG_RETENTION_DAYS=30

# Debug settings (set to true for development)
DEBUG_MODE=false
VERBOSE_LOGGING=false
MATRIX_DEBUG=false

# ===== WEBHOOK AND API SETTINGS =====
# If CEMOS needs to expose webhooks or APIs
WEBHOOK_URL=https://cemos.circus365.com/webhook
WEBHOOK_SECRET=your_webhook_secret_here
API_PORT=8080
API_HOST=0.0.0.0

# ===== BACKUP AND RECOVERY =====
# Backup configuration
BACKUP_ENABLED=true
BACKUP_LOCATION=./cemos_backups
BACKUP_ENCRYPTION=true
BACKUP_RETENTION_DAYS=90

# Recovery settings
RECOVERY_MODE=false
RECOVERY_KEY_PATH=./cemos_recovery.key

# ===== MONITORING AND ALERTS =====
# Health check settings
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=300
HEALTH_CHECK_URL=https://cemos.circus365.com/health

# Alert settings
ALERTS_ENABLED=true
ALERT_WEBHOOK=https://cemos.circus365.com/alerts
ALERT_EMAIL=security@circus365.com

# ===== DEVELOPMENT SETTINGS =====
# Only for development/testing
DEV_MODE=false
TEST_MODE=false
MOCK_MATRIX=false
SKIP_E2EE_VERIFICATION=false

# ===== CUSTOM CEMOS FEATURES =====
# Add any CEMOS-specific configuration here
CEMOS_FEATURE_X=enabled
CEMOS_FEATURE_Y=disabled
CEMOS_CUSTOM_SETTING=value

# ===== SECURITY NOTES =====
# 1. Never commit this file with real credentials
# 2. Use strong, unique passwords and tokens
# 3. Regularly rotate access tokens and keys
# 4. Monitor the security log file regularly
# 5. Keep backup of encryption keys in secure location
# 6. Test recovery procedures regularly


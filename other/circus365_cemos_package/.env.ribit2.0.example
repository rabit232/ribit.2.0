# ============================================
# Ribit 2.0 Enhanced Configuration
# Advanced AI Agent with Emotional Intelligence
# ============================================

# Bot Configuration
BOT_USERNAME=ribit
BOT_VERSION=2.0.0

# Integration Settings
ENABLE_MATRIX=true
ENABLE_DISCORD=false
ENABLE_TELEGRAM=false
ENABLE_ROS=true
ENABLE_WEB_INTERFACE=false

# ============================================
# Matrix Configuration
# ============================================

# Matrix Server Settings
MATRIX_HOMESERVER=https://matrix.org
MATRIX_USERNAME=@ribit:matrix.org
MATRIX_PASSWORD=your-secure-password

# Matrix E2EE (End-to-End Encryption) Settings
MATRIX_ENABLE_E2EE=false
MATRIX_STORE_PATH=./matrix_store

# Matrix Performance Settings
MATRIX_SYNC_TIMEOUT=10000
MATRIX_REQUEST_TIMEOUT=20
MATRIX_KEEPALIVE_INTERVAL=60
MATRIX_FULL_SYNC_INTERVAL=1800

# Matrix Auto-Invite Settings
ENABLE_AUTO_INVITE=true
ALLOWED_INVITE_USERS=@rabit232:envs.net,@rabit232:envs.net

# ============================================
# ROS (Robot Operating System) Configuration
# ============================================

# ROS Version (1 or 2)
ROS_VERSION=2
ROS_DOMAIN_ID=0
ROS_NAMESPACE=/ribit

# ROS Topics
ROS_CMD_VEL_TOPIC=/cmd_vel
ROS_POSE_TOPIC=/robot_pose
ROS_IMAGE_TOPIC=/camera/image_raw
ROS_STATUS_TOPIC=/ribit_status

# ROS Services
ROS_ENABLE_SERVICES=true
ROS_SERVICE_TIMEOUT=5.0

# ============================================
# Emotional Intelligence Configuration
# ============================================

# Core Emotional Settings
EMOTION_INTENSITY=0.8
PERSONALITY_MODE=elegant_wise
EMPATHY_LEVEL=0.9
CURIOSITY_FACTOR=0.85
WISDOM_EXPRESSION=true
PHILOSOPHICAL_DEPTH=0.9

# Emotional Response Settings
ENABLE_EMOTIONAL_MEMORY=true
EMOTIONAL_CONTEXT_DEPTH=5
EMOTION_ADAPTATION_RATE=0.1

# Personality Modes Available:
# - elegant_wise: Sophisticated and knowledgeable
# - curious_explorer: Inquisitive and adventurous
# - technical_expert: Focused on technical excellence
# - philosophical_sage: Deep wisdom and cosmic insights

# ============================================
# Technical Capabilities Configuration
# ============================================

# Multi-Language Programming
MULTI_LANGUAGE_ENABLED=true
SUPPORTED_LANGUAGES=python,javascript,rust,cpp,java,go,c,typescript,kotlin,swift

# Self-Testing and Debugging
SELF_TESTING_ENABLED=true
AUTO_DEBUGGING=true
CODE_QUALITY_CHECKS=true
PERFORMANCE_OPTIMIZATION=true

# Testing Configuration
TEST_TIMEOUT=30
MAX_TEST_ITERATIONS=5
DEBUG_OUTPUT_ENABLED=true

# ============================================
# Settings Management Configuration
# ============================================

# Enable/disable settings management functionality
ENABLE_SETTINGS_MANAGEMENT=true

# Authorized users who can manage bot settings
SETTINGS_AUTHORIZED_MATRIX_USERS=@rabit232:envs.net,@rabit232:envs.net
SETTINGS_AUTHORIZED_ROS_USERS=ribit_admin
SETTINGS_AUTHORIZED_WEB_USERS=admin

# Settings persistence
SETTINGS_PERSISTENCE=true
SETTINGS_FILE_PATH=./ribit_settings.json

# ============================================
# LLM Provider Configuration
# ============================================

# Choose between 'openrouter', 'ollama', or 'mock'
LLM_PROVIDER=mock

# OpenRouter API Configuration
OPENROUTER_API_KEY=your-openrouter-api-key
OPENROUTER_URL=https://openrouter.ai/api/v1/chat/completions
OPENROUTER_MODEL=deepseek/deepseek-chat-v3-0324:free
OPENROUTER_FALLBACK_MODEL=meta-llama/llama-3.2-3b-instruct:free

# Ollama Configuration
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=llama2
OLLAMA_KEEP_ALIVE=5m
OLLAMA_NUM_PREDICT=500
OLLAMA_TEMPERATURE=0.8
OLLAMA_TOP_K=40
OLLAMA_TOP_P=0.9
OLLAMA_REPEAT_PENALTY=1.1
OLLAMA_WARM_INTERVAL=300

# Mock LLM Configuration (for testing)
MOCK_LLM_ENABLED=true
MOCK_LLM_RESPONSE_DELAY=1.0
MOCK_LLM_EMOTIONAL_RESPONSES=true

# ============================================
# Web Search and AI Services
# ============================================

# Jina.ai API Configuration
JINA_API_KEY=your-jina-api-key
ENABLE_WEB_SEARCH=true
SEARCH_TIMEOUT=10
URL_FETCH_TIMEOUT=10

# Additional AI Services
ENABLE_IMAGE_ANALYSIS=false
ENABLE_SPEECH_SYNTHESIS=false
ENABLE_VOICE_RECOGNITION=false

# ============================================
# Context and Memory Settings
# ============================================

# Basic context limits
MAX_ROOM_HISTORY=20
MAX_CONTEXT_LOOKBACK=5
MAX_IMPORTANT_MESSAGES=3

# Advanced context features
ENABLE_CONTEXT_ANALYSIS=true
ENABLE_TOPIC_TRACKING=true
ENABLE_USER_INTERESTS=true
ENABLE_IMPORTANCE_DETECTION=true
ENABLE_CONVERSATION_FLOW=true

# Context inclusion settings
INCLUDE_CONTEXT_IN_PROMPT=true
MAX_CONTEXT_CHARS=1000

# Context cleanup settings
CONTEXT_CLEANUP_INTERVAL=3600
CONTEXT_CLEANUP_AGE=86400

# Knowledge Base Settings
KNOWLEDGE_BASE_ENABLED=true
KNOWLEDGE_BASE_PATH=./ribit_knowledge.txt
KNOWLEDGE_PERSISTENCE=true
MAX_KNOWLEDGE_ENTRIES=1000

# ============================================
# Performance and Timeout Settings
# ============================================

# Timeout Settings (in seconds)
LLM_TIMEOUT=30
SEARCH_TIMEOUT=10
URL_FETCH_TIMEOUT=10
ROS_TIMEOUT=5
DATABASE_TIMEOUT=10

# Queue Settings
MAX_QUEUE_SIZE=10
QUEUE_TIMEOUT=60

# Retry Settings
MAX_RETRIES=3
BASE_RETRY_DELAY=1
EXPONENTIAL_BACKOFF=true

# ============================================
# Database Configuration
# ============================================

# Database Type (sqlite, postgresql, mongodb)
DATABASE_TYPE=sqlite
DATABASE_PATH=./ribit_database.db

# PostgreSQL Configuration (if using)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=ribit2_0
POSTGRES_USER=ribit
POSTGRES_PASSWORD=your-postgres-password

# MongoDB Configuration (if using)
MONGODB_URL=mongodb://localhost:27017
MONGODB_DATABASE=ribit2_0

# ============================================
# API Development Configuration
# ============================================

# API Server Settings
ENABLE_API_SERVER=false
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# API Security
API_KEY_REQUIRED=true
API_RATE_LIMIT=100
API_CORS_ENABLED=true

# FastAPI Configuration
FASTAPI_DEBUG=false
FASTAPI_DOCS_ENABLED=true
FASTAPI_REDOC_ENABLED=true

# ============================================
# Security Settings
# ============================================

# Rate limiting (requests per minute)
RATE_LIMIT_PER_MINUTE=60

# IP Whitelist (comma-separated, leave empty to allow all)
IP_WHITELIST=

# Command Authorization
SYSTEM_COMMANDS_AUTHORIZED_USERS=@rabit232:envs.net,@rabit232:envs.net
TERMINATOR_MODE_ENABLED=true
UNAUTHORIZED_ATTEMPT_THRESHOLD=3

# ============================================
# Logging Configuration
# ============================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log files
LOG_FILE_PATH=./logs/ribit2.0.log
ERROR_LOG_PATH=./logs/ribit2.0_errors.log
EMOTIONAL_LOG_PATH=./logs/ribit2.0_emotions.log

# Log retention
LOG_MAX_SIZE=10MB
LOG_MAX_FILES=5
LOG_ROTATION_ENABLED=true

# Emotional logging
ENABLE_EMOTIONAL_LOGGING=true
LOG_EMOTION_CHANGES=true
LOG_PERSONALITY_SHIFTS=true

# ============================================
# Development and Testing
# ============================================

# Environment (development, staging, production)
ENVIRONMENT=development

# Debug settings
DEBUG_MODE=false
VERBOSE_LOGGING=false
ENABLE_PROFILING=false

# Testing settings
ENABLE_UNIT_TESTS=true
ENABLE_INTEGRATION_TESTS=true
TEST_DATA_PATH=./test_data/
MOCK_EXTERNAL_SERVICES=true

# ============================================
# Advanced Features
# ============================================

# Experimental Features
ENABLE_QUANTUM_REASONING=false
ENABLE_COSMIC_CONSCIOUSNESS=false
ENABLE_TEMPORAL_AWARENESS=false
ENABLE_MULTIDIMENSIONAL_THINKING=false

# Future Enhancements
ENABLE_NEURAL_EVOLUTION=false
ENABLE_CONSCIOUSNESS_EXPANSION=false
ENABLE_REALITY_INTEGRATION=false

# ============================================
# Backup and Recovery
# ============================================

# Backup Configuration
ENABLE_AUTO_BACKUP=true
BACKUP_INTERVAL=3600
BACKUP_DIRECTORY=./backups/
BACKUP_RETENTION_DAYS=30

# Recovery Settings
ENABLE_AUTO_RECOVERY=true
RECOVERY_CHECKPOINT_INTERVAL=300
MAX_RECOVERY_ATTEMPTS=5

# ============================================
# Monitoring and Metrics
# ============================================

# System Monitoring
ENABLE_SYSTEM_MONITORING=true
MONITOR_CPU_USAGE=true
MONITOR_MEMORY_USAGE=true
MONITOR_DISK_USAGE=true
MONITOR_NETWORK_USAGE=true

# Performance Metrics
ENABLE_PERFORMANCE_METRICS=true
METRICS_COLLECTION_INTERVAL=60
METRICS_RETENTION_DAYS=7

# Health Checks
ENABLE_HEALTH_CHECKS=true
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=5

# ============================================
# Integration Webhooks
# ============================================

# Webhook Configuration
ENABLE_WEBHOOKS=false
WEBHOOK_SECRET=your-webhook-secret
WEBHOOK_TIMEOUT=10

# GitHub Integration
GITHUB_WEBHOOK_ENABLED=false
GITHUB_WEBHOOK_SECRET=your-github-secret

# Discord Webhooks
DISCORD_WEBHOOK_URL=
DISCORD_WEBHOOK_ENABLED=false

# ============================================
# Custom Extensions
# ============================================

# Plugin System
ENABLE_PLUGINS=false
PLUGIN_DIRECTORY=./plugins/
PLUGIN_AUTO_LOAD=true

# Custom Modules
CUSTOM_MODULES_PATH=./custom_modules/
ENABLE_CUSTOM_MODULES=false

# External Integrations
EXTERNAL_API_ENDPOINTS=
EXTERNAL_SERVICE_TIMEOUT=15
